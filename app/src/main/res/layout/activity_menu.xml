<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".Menu">

        <!-- Título del Menú -->
        <TextView
            android:id="@+id/tvTituloMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú Principal"
            android:textSize="32sp"
            android:textColor="#EDEDED"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 1 - Calculadora -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="CALCULADORA"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"

            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 2 - Imagenes -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImg"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="IMÁGENES"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 3 - pestañas -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWindows"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="pestañas"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 4 - Web -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeb"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="WEB"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWindows"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 5 - Video -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVideo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="VIDEO"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWeb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 6 - GPS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGps"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="GPS"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnVideo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 7 - Acerca -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="ACERCA DE"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#7C4DFF"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón 8 - Salir -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="SALIR"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#F44336"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#F44336"
            app:strokeWidth="2dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
