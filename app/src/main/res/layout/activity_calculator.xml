<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#1E1E1E"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context=".Calculator">

    <!-- Display Area Superior -->
    <TextView
        android:id="@+id/text_small"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2D2D2D"
        android:layout_weight="1"
        android:text=""
        android:textSize="20sp"
        android:textColor="#BBBBBB"
        android:textAlignment="textEnd"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:gravity="bottom"
        android:fontFamily="monospace"
        tools:ignore="RtlCompat" />

    <!-- Display Area Principal -->
    <TextView
        android:id="@+id/text_big"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2D2D2D"
        android:layout_weight="2"
        android:text="0"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:textAlignment="textEnd"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:gravity="bottom"
        android:fontFamily="monospace"
        tools:ignore="RtlCompat" />

    <!-- Botones de la Calculadora -->
    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Fila 1: AC, C, (, ) -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_ac"
                    android:text="AC"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF6B6B"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_c"
                    android:text="⌫"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_b1"
                    android:text="("
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_b2"
                    android:text=")"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 2: sin, cos, tan, log, ln -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_sin"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_cos"
                    android:text="cos"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_tan"
                    android:text="tan"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_log"
                    android:text="log"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_ln"
                    android:text="ln"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 3: x!, x², √, 1/x, ÷ -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_fact"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_x2"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_akar"
                    android:text="√"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_inv"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_div"
                    android:text="÷"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 4: 7, 8, 9, × -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_7"
                    android:text="7"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_8"
                    android:text="8"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_9"
                    android:text="9"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_multiply"
                    android:text="×"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 5: 4, 5, 6, - -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_4"
                    android:text="4"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_5"
                    android:text="5"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_6"
                    android:text="6"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_minus"
                    android:text="-"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 6: 1, 2, 3, + -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_1"
                    android:text="1"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_2"
                    android:text="2"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_3"
                    android:text="3"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_plus"
                    android:text="+"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Fila 7: π, 0, ., = -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/btn_phi"
                    android:text="π"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="#6A5ACD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_dot"
                    android:text="."
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_equals"
                    android:text="="
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar" />
</LinearLayout>